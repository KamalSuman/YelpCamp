<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Titles</label>
                    <input class="form-control" type="text" id="title" name="campgrounds[title]" placeholder="title"
                        required>
                    <div class="valid-feedback">Looks Great!</div>
                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" id="location" name="campgrounds[location]"
                            placeholder="location" required>
                        <div class="valid-feedback">Looks Great!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="images">Image Url</label>
                        <input class="form-control" type="text" id="images" name="campgrounds[image]"
                            placeholder="Image Url" required>
                        <div class="valid-feedback">Looks Great!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="price">Price</label>
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1">$</span>
                            <input type="text" id="price" class="form-control" placeholder="0.00"
                                name="campgrounds[price]" aria-label="Username" required
                                aria-describedby="basic-addon1">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" type="text" id="location" name="campgrounds[description]"
                            placeholder="text-area" required></textarea>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-success">Add Campground</button>
                    </div>
            </form>
            <a href="/campgrounds">All Campgrounds</a>
        </div>
    </div>